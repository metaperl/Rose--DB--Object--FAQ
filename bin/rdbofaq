#!/bin/env perl     



use FindBin;
use lib "$FindBin::Bin/../lib";

use MyApp;


load_modules();

$Rose::DB::Object::Manager::Debug = 1;
$Rose::DB::Object::Debug = 1;

MyApp->run;


sub load_modules {
    my @class = qw(Actor);
    for my $class (@class) 
    {
	warn $class;

	my $klass = "MySchema::$class";
	
	use Class::MOP;

	Class::MOP::load_class($klass);
	$klass .= "::Manager";
	Class::MOP::load_class("$klass");

    }
}




